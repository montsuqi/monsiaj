<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.montsuqi.monsiaj</groupId>
    <artifactId>monsiaj</artifactId>
    <packaging>jar</packaging>
    <version>2.0.29</version>
    <name>monsiaj</name>
    <url>https://github.com/montsuqi/monsiaj</url>
    <description>montsuqi panda client for java</description>
    <organization>
        <name>montsuqi.org</name>
    </organization>

    <properties>
        <maven.compiler.source>1.8+</maven.compiler.source>
        <maven.compiler.target>1.8+</maven.compiler.target>
    </properties>

    <pluginRepositories>
        <pluginRepository>
            <id>central</id>
            <name>Maven Plugin Repository</name>
            <url>https://repo.maven.apache.org/maven2</url>
            <layout>default</layout>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <updatePolicy>never</updatePolicy>
            </releases>
        </pluginRepository>
    </pluginRepositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                            <addClasspath>true</addClasspath>
                            <mainClass>org.montsuqi.monsiaj.client.Launcher</mainClass>
                        </manifest>
                        <manifestEntries>
                            <permissions>all-permissions</permissions>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>

            <!-- make bin package -->
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>make-bin-zip</id>
                        <configuration>
                            <finalName>monsiaj-${project.version}</finalName>
                            <descriptors>
                                <descriptor>src/assembly/jar-with-dependencies.xml</descriptor>
                                <descriptor>src/assembly/bin.xml</descriptor>
                                <descriptor>src/assembly/src.xml</descriptor>
                            </descriptors>
                            <archive>
                                <manifest>
                                    <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                                    <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                                    <mainClass>org.montsuqi.monsiaj.client.Launcher</mainClass>
                                </manifest>
                                <manifestEntries>
                                    <permissions>all-permissions</permissions>
                                </manifestEntries>
                            </archive>
                        </configuration>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>make-loader</id>
                        <configuration>
                            <finalName>monsiaj-loader-${project.version}</finalName>
                            <descriptors>
                                <descriptor>src/assembly/loader.xml</descriptor>
                            </descriptors>
                            <archive>
                                <manifest>
                                    <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                                    <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                                    <mainClass>org.montsuqi.monsiaj.loader.Loader</mainClass>
                                </manifest>
                                <manifestEntries>
                                    <permissions>all-permissions</permissions>
                                </manifestEntries>
                            </archive>
                        </configuration>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!--
                        <plugin>
                            <groupId>org.apache.maven.plugins</groupId>
                            <artifactId>maven-jarsigner-plugin</artifactId>
                            <version>1.4</version>
                            <executions>
                                <execution>
                                    <id>sign</id>
                                    <goals>
                                        <goal>sign</goal>
                                    </goals>
                                </execution>
                            </executions>
                            <configuration>
                                <archiveDirectory>${project.build.directory}</archiveDirectory>
                                <excludeClassifiers>
                                    <excludeClassifier>bin</excludeClassifier>
                                    <excludeClassifier>src</excludeClassifier>
                                </excludeClassifiers>
                                <arguments>
                                   <argument>-tsa</argument>
